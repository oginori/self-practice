<h1>New Book</h1>

<%= form_with(model: @book, local: true) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :summary %><br>
  <%= f.text_area :summary %><br>
  <%= f.label :date_of_publication %><br>
  <%= f.date_select :date_of_publication %><br>
  <%= f.label :author %><br>
  <%= f.collection_select(:author_id, @auhors, :id, :name) %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back to Book List', books_path %>
